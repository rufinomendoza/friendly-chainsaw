<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <httpErrors errorMode="Custom" defaultResponseMode="ExecuteURL">
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
    </httpErrors>
    <rewrite>
      <rules>
 
        <rule name="mendoza.vc" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?mendoza.(vc|nl)" />
            <add input="{PATH_INFO}" pattern="^/mendoza/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\mendoza\{R:0}" />
        </rule>
 
      </rules>
    </rewrite>

</system.webServer>
</configuration>