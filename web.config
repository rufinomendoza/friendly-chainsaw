<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="mendoza.vc" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?mendoza.(vc|nl)" />
            <add input="{PATH_INFO}" pattern="^/vc/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\vc\{R:0}" />
        </rule>
        <rule name="mendozaindustries.com" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?mendozaindustries.(com|nl)" />
            <add input="{PATH_INFO}" pattern="^/mi/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\mi\{R:0}" />
        </rule>
      </rules>
    </rewrite>
    <httpErrors errorMode="Custom" existingResponse="Auto" defaultResponseMode="ExecuteURL" >
      <remove statusCode="404"/>
      <error statusCode="404" responseMode="ExecuteURL" path="/404/index.html" />
    </httpErrors>
  </system.webServer>
</configuration>